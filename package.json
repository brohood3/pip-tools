{
  "name": "pip-ai-chat",
  "version": "1.0.0",
  "description": "Pip AI Chat - A modular AI chat interface with specialized tools",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "gunicorn -k eventlet -w 1 ai_chat_app:app",
    "dev:backend": "python ai_chat_app.py",
    "dev:frontend": "cd chat-ui && npm run dev",
    "build:frontend": "cd chat-ui && npm run build",
    "install:frontend": "cd chat-ui && npm install",
    "install:all": "pip install -r requirements.txt && npm run install:frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/pip-chat.git"
  },
  "keywords": [
    "ai",
    "chat",
    "openai",
    "flask",
    "nextjs",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 